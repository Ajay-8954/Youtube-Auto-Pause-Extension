{
  "manifest_version": 3,
  "name": "YouTube Tab Switcher",
  "version": "1.0",
  "description": "Automatically pauses YouTube videos when switching tabs.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img_announcement_pause.png"
  }
}
